<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/main.css" />
    <noscript>
        <link rel="stylesheet" href="../assets/sass/noscript.scss" />
    </noscript>
    <title>Teacher</title>
</head>

<body>

    <!-- Sidebar -->
    <section id="sidebar">
        <div class="inner">
            <nav>
                <ul>
                    <li><a href="/teacher/group">Groups</a></li>
                </ul>
            </nav>
        </div>
    </section>

    <div id="wrapper">
        <!-- Intro -->
        <section id="intro" class="wrapper style1 fullscreen fade-up">
            <div class="inner">
                <h1 class="text-center">Teacher info</h1>

                <ul class="actions d-flex flex-wrap justify-content-around">
                    <% allUsers.map(e=> {%>
                        <li class="card p-3 bg-primary">
                            <a href="/teacher/group">
                                <h5>
                                   Teacher name: <%=e.name %>
                                </h5>
                                <h5>
                                    Group field : <%=e.field %>
                                </h5>
                                <h5>
                                    Tel: <%=e.tel %>
                                </h5>
                            </a>
                        </li>
                        <%}); %>
                </ul>
            </div>
        </section>
    </div>




</body>

</html>