<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <!-- CSS only -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <link rel="stylesheet" href="../assets/css/main.css" />
    <noscript>
        <link rel="stylesheet" href="../assets/sass/noscript.scss" />
    </noscript>
    <title>Group Admin</title>
</head>

<body>

    <!-- Sidebar -->
    <section id="sidebar">
        <div class="inner">
            <nav>
                <ul>
                    <li><a href="/admin/course">Courses</a></li>
                    <li><a href="/admin/teacher">Teachers</a></li>
                    <li><a href="/admin/group">Groups</a></li>
                    <li><a href="/admin/student">Students</a></li>
                </ul>
            </nav>
        </div>
    </section>


    <div id="wrapper">
        <header class="headerWrapper">
            <h1>Groups</h1>
        </header>
        <!-- Three -->
        <section id="three" class="wrapper style1 fade-up">
            <div class="inner">
                <h2>Adding Group</h2>
                <div class="split style1">
                    <section>
                        <form method="post" action="#">
                            <div class="fields">
                                <div class="field half">
                                    <label for="name">Group name</label>
                                    <input type="text" name="name" placeholder="Groupname" required />
                                </div>
                                <div class="field half">
                                    <label for="name">Course types</label>
                                    <select name="type">
                                        <option selected>Select course type</option>
                                        <% allCourses.map(e=> { %>
											<option><%=e.title %></option>
										<% }); %>
                                    </select>
                                </div>
                                <div class="field half">
                                    <label for="days">Days</label>
                                    <select name="days" id="days">
                                        <option selected="choose days">Choose days</option>
                                        <option value="mon-wed-fri">Mon-Wed-Fri</option>
                                        <option value="tue-thur-sat">Tue-Thur-Sat</option>
                                        <option value="everyday">Everyday</option>
                                    </select>
                                </div>
                                <div class="field half">
                                    <label for="time">Time</label>
                                    <select name="time" id="days">
                                        <option selected="choose time" >Choose time</option>
                                        <option value="7:30 a.m">7:30 a.m</option>
                                        <option value="9:00 a.m">9:00 a.m</option>
                                        <option value="16:00 p.m">16:00 p.m</option>
                                    </select>
                                </div>
                                <div class="field half">
                                    <label for="teacher">Teacher</label>
                                    <select name="teacher">
                                        <option selected>Select teacher</option>
                                        <% allUsers.map(e=> { %>
											<option><%=e.name %></option>
										<% }); %>
                                    </select>
                                </div>
                            </div>
                            <ul class="actions">
                                <li><a href="" class="button submit">Submit</a></li>
                            </ul>
                        </form>
                    </section>
                    <section>
                        <!--Adding groups-->
                        <h3 class="group Title text-center">Exist Groups</h3>
                        <ul class="groupList d-flex justify-content-around flex-wrap pt-5">
                            <% allGroups.map(e=> {%>
                                <li class="card bg-primary p-4 rounded-5 mt-5">
                                    <h5>Group name: <%=e.name %></h5>
                                    <h5>Group type: <%=e.type %></h5>
                                    <h5>Teacher: <%=e.teacher %></h5>
                                    <h5>Time: <%=e.time %></h5>
                                    <h5>Days: <%=e.days %></h5>
                                    <button id="<%= e.id %>" onclick="deleteHandleGroup(event)" class="button btn-danger">Delete</button>
                                </li>
                            <%}); %>
                        </ul>
                    </section>
                </div>
            </div>
        </section>

    </div>


    <script src="../assets/app.js"></script>







    <!-- Scripts -->
    <script src="../assets/js/jquery.min.js"></script>
    <script src="../assets/js/jquery.scrollex.min.js"></script>
    <script src="../assets/js/jquery.scrolly.min.js"></script>
    <script src="../assets/js/browser.min.js"></script>
    <script src="../assets/js/breakpoints.min.js"></script>
    <script src="../assets/js/util.js"></script>
    <script src="../assets/js/main.js"></script>

</body>

</html>